<wsdl:definitions xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
	xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/" xmlns:http="http://schemas.xmlsoap.org/wsdl/http/"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:req="http://schemas.hu.fnt.nl/berichten/request"
	xmlns:rsp="http://schemas.hu.fnt.nl/berichten/response" xmlns:hdr="http://schemas.hu.fnt.nl/berichten/header"
	xmlns:flt="http://schemas.hu.fnt.nl/berichten/fout" xmlns:srv="http://schemas.hu.fnt.nl/berichten/message"
	targetNamespace="http://schemas.hu.fnt.nl/berichten/message">

	<wsdl:types>
		<xsd:schema>
			<xsd:import namespace="http://schemas.hu.fnt.nl/berichten/request"
				schemaLocation="request.xsd" />
			<xsd:import namespace="http://schemas.hu.fnt.nl/berichten/response"
				schemaLocation="response.xsd" />
			<xsd:import namespace="http://schemas.hu.fnt.nl/berichten/header"
				schemaLocation="header.xsd" />
			<xsd:import namespace="http://schemas.hu.fnt.nl/berichten/fout"
				schemaLocation="fout.xsd" />
		</xsd:schema>
	</wsdl:types>

	<wsdl:message name="request">
		<wsdl:part name="request" element="req:request" />
		
	</wsdl:message>
	<wsdl:message name="response">
		<wsdl:part name="response" element="rsp:response" />
	</wsdl:message>
	<wsdl:message name="ApplicatieFout">
		<wsdl:part name="ApplicatieFout" element="flt:ApplicatieFout" />
	</wsdl:message>

	<wsdl:portType name="WS-Interface">
		<wsdl:operation name="mijnMethod">
			<wsdl:input message="srv:request" />
			<wsdl:output message="srv:response" />
			<wsdl:fault name="ApplicatieFout" message="srv:ApplicatieFout" />
		</wsdl:operation>
	</wsdl:portType>

	<wsdl:binding name="WS-Binding" type="srv:WS-Interface">
		<soap:binding style="document"
			transport="http://schemas.xmlsoap.org/soap/http" />
		<wsdl:operation name="mijnMethod">
			<soap:operation soapAction="" style="document" />
			<wsdl:input>
				<soap:body use="literal" />
				<soap:header message="srv:header" part="header" use="literal" />
			</wsdl:input>
			<wsdl:output>
				<soap:body use="literal" />
				<soap:header message="srv:header" part="header" use="literal" />
			</wsdl:output>
			<wsdl:fault name="ApplicatieFout">
				<soap:fault name="ApplicatieFout" use="literal" />
			</wsdl:fault>
		</wsdl:operation>
	</wsdl:binding>

<wsdl:service name="mijnService">
<wsdl:port name="WS-Port" binding="srv:WS-Binding">
<soap:address location="http://www.examples.com/SayHello/"/>
</wsdl:port>
</wsdl:service>


</wsdl:definitions>